<Window x:Class="Lab1.Desktop.Views.ColumnsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Columns"
        Height="420" Width="720"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner">

	<Grid Margin="16">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
			<TextBox x:Name="NameBox"
                     Width="200"
                     Margin="0,0,8,0"
                     ToolTip="Column name"
                     />

			<ComboBox x:Name="TypeBox"
                      Width="160"
                      Margin="0,0,8,0"
                      ToolTip="Column type"
                      SelectionChanged="TypeBox_SelectionChanged"/>

			<StackPanel x:Name="IntervalPanel"
                        Orientation="Horizontal"
                        Margin="0,0,8,0"
                        Visibility="Collapsed">
				<TextBlock Text="[" VerticalAlignment="Center" Foreground="White" Margin="0,0,2,0"/>
				<TextBox x:Name="StartBox"
                         Width="30"
                         MaxLength="1"
                         Margin="0,0,4,0"
                         ToolTip="Start char"/>
				<TextBlock Text=";" VerticalAlignment="Center" Foreground="White" Margin="0,0,2,0"/>
				<TextBox x:Name="EndBox"
                         Width="30"
                         MaxLength="1"
                         Margin="0,0,4,0"
                         ToolTip="End char"/>
				<TextBlock Text="]" VerticalAlignment="Center" Foreground="White"/>
			</StackPanel>

			<Button Content="Add"
                    Width="90"
                    Click="Add_Click"/>

			<Button Content="Refresh"
                    Width="90"
                    Margin="8,0,0,0"
                    Click="Refresh_Click"/>
		</StackPanel>

		<ListView x:Name="ColumnsList"
                  Grid.Row="1"
                  SelectionMode="Single">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Name" Width="260" DisplayMemberBinding="{Binding Name}"/>
					<GridViewColumn Header="Type" Width="140" DisplayMemberBinding="{Binding Type}"/>
					<GridViewColumn Header="Id" Width="220" DisplayMemberBinding="{Binding Id}"/>
				</GridView>
			</ListView.View>
		</ListView>

		<StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
			<Button Content="Delete selected"
                    Width="140"
                    Foreground="Red"
                    Click="Delete_Click"/>
			<Button Content="Close"
                    Width="100"
                    Margin="8,0,0,0"
                    IsCancel="True"/>
		</StackPanel>
	</Grid>
</Window>